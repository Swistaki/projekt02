<form action="/recipes/<%= category.id %>/new" method="POST">
  <div>
    <label for="recipe_title">Tytuł przepisu</label>
    <input type="text" name="title" id="recipe_title" required minlength="1" maxlength="200"
      value="<%= (recipe && recipe.title) ? recipe.title : '' %>" />
  </div>

  <div>
    <label for="recipe_ingredients">Składniki (jeden na wiersz)</label>
    <textarea name="ingredients" id="recipe_ingredients" required rows="6" maxlength="2000" placeholder="np. 200g mąki&#10;2 jajka"><%= (recipe && recipe.ingredients) ? recipe.ingredients : '' %></textarea>
  </div>

  <div>
    <label for="recipe_instructions">Instrukcje / Przygotowanie</label>
    <textarea name="instructions" id="recipe_instructions" required rows="8" maxlength="5000" placeholder="Opis kroków..."><%= (recipe && recipe.instructions) ? recipe.instructions : '' %></textarea>
  </div>

  <div>
    <label for="recipe_cook_time">Czas przygotowania (minuty)</label>
    <input type="number" name="cook_time_min" id="recipe_cook_time" min="0" step="1" value="<%= (recipe && recipe.cook_time_min) ? recipe.cook_time_min : '' %>"/>
  </div>

  <div>
    <label for="recipe_servings">Porcje</label>
    <input type="number" name="servings" id="recipe_servings" min="1" step="1" value="<%= (recipe && recipe.servings) ? recipe.servings : '' %>"/>
  </div>

  <div>
    <button>Dodaj przepis</button>
  </div>
</form>